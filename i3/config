# set client theme          border     background  text
client.focused              $magenta   $magenta    $base03
client.unfocused            $base02    $base02     $base10
client.focused_inactive     $base02    $base02     $base10
client.urgent               $red       $red        $base13

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
    mode dock
    status_command i3status -c ~/.config/i3/i3status.conf
    position top
    tray_output $primary_monitor
    font pango:Iosevka Term 10
    colors {
        ## Set colors
        background          $base03
        statusline          $base10
        separator           $base01

                            #border    #background    #text
        focused_workspace   $green     $green         $base03
        active_workspace    $cyan      $cyan          $base03
        inactive_workspace  $base01    $base01        $base03
        urgent_workspace    $red       $red           $base13
    }
}

